{
  "name": "opencode-athena",
  "version": "1.0.0",
  "description": "Strategic wisdom meets practical execution - Unified oh-my-opencode + BMAD METHOD toolkit for OpenCode",
  "keywords": [
    "opencode",
    "ai",
    "agents",
    "bmad",
    "oh-my-opencode",
    "agentic",
    "development",
    "toolkit",
    "cli",
    "athena"
  ],
  "homepage": "https://github.com/ZebulonRouseFrantzich/opencode-athena#readme",
  "bugs": {
    "url": "https://github.com/ZebulonRouseFrantzich/opencode-athena/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZebulonRouseFrantzich/opencode-athena.git"
  },
  "license": "MIT-0",
  "author": "ZebulonRouseFrantzich",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "import": "./dist/plugin/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "opencode-athena": "./dist/cli/index.js",
    "athena": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "commands",
    "config"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0",
    "yaml": "^2.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@opencode-ai/plugin": "latest",
    "@types/node": "^22.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
